pipeline{
    agent any
    environment{
	Toolname="Jenkins"
    }
    stages{    
	stage("Conditions") {
		steps{
			script{
        			if (Toolname=="Jenkins"){
					echo "Our CI CD tool"
                                        sh '''
                                        touch arquivo1.txt
                                        echo "Not CI CD tool" > arquivo1.txt
					cat arquivo1.txt
					'''
				}
				else { 
					echo "Not CI CD tool"
                                        sh '''
                                        touch arquivo2.txt
                                        echo "Not CI CD tool" > arquivo2.txt
					cat arquivo2.txt
					'''
        			}
    			}
		}
	}
     }
}
