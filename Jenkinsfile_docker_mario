pipeline {
    agent any
    
    stages {
               
        stage('Iniciar Container mario') {
            steps {
                sh '''
                   nohup docker run -i --name mario -p 8081:8080 pengbai/docker-supermario &
                   '''
            }
        }
        
        stage('Baixar container jenkins') {
            steps {
                sh '''
                   docker ps
                   '''
            }
        }
    }
}
