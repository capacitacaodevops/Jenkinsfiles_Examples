pipeline {
    agent any
    
    stages {
               
        stage('Iniciar Aplicação') {
            steps {
                sh '''
                  nohup docker run -i -p 8081:8080 pengbai/docker-supermario &
                   '''
            }
        }
        
        stage('Testar Aplicação') {
            steps {
                sh '''
                   docker stop jenkins
                   docker rm jenkins
                   '''
            }
        }
    }
}
