pipeline {
    agent any
    
    stages {
               
        stage('Download Repositório') {
            steps {
                sh '''
                  git clone https://github.com/capacitacaodevops/spring-petclinic                   
                  '''
            }
         }
         
                  
         stage('Build') {
            steps {
                sh '''
                   cd spring-petclinic
                   ./mvnw package
                   '''
            }
         }
         
         stage('Start Aplicação') {
            steps {
                sh '''
                  java -jar target/*.jar
                   '''
            }
         }
        
        
    }
}
