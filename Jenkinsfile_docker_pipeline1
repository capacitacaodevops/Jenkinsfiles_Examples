
pipeline {
    agent any
    
    stages {
               
        stage('Iniciar Container mario') {
            steps {
                sh '''
                   docker pull pengbai/docker-supermario:latest
                   nohup docker run -i --name mario -p 8081:8080 pengbai/docker-supermario &
                   '''
            }
         }
         
         stage('pwd_ls') {
            steps {
                sh '''
                   pwd
                   ls
                   '''
            }
         }
         
        
        
    }
}
