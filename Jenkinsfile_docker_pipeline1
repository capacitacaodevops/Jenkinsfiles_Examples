pipeline {
    agent any
    
    stages {
               
        stage('Download Container mario') {
            steps {
                sh '''
                   rm -Rvf *
                   id
                   pwd
                   docker pull pengbai/docker-supermario:latest
                   '''
            }
         }
         
         stage('Iniciar Container Mario') {
            steps {
                sh '''
                 ./up_mario.sh
                   '''
            }
         }
         
        
        
    }
}


