pipeline{
    agent any
    stages{    
	stage("Conditions") {
		steps{
			script{
        		        var="jenkins"
				if (var=="jenkins"){
                                       sh '''echo "Conteudo" > jenkins.txt
					     var2=$(cat jenkins.txt) 
                                             echo $var2
                                          '''
                                       

					echo "if selecionado"
				}
				else { 
					echo "else selecionado"
        			}
    			}
		}
	}
     }
}
