pipeline{
    agent any
    environment{
     var="jenkins"	
    }
    stages{    
	stage("Conditions") {
		steps{
			script{
        			if (var=="jenkins"){
                                       sh '''var2=$(cat jenkins.txt) 
                                             echo $var2
                                          '''

					echo "Our CI CD tool"
				}
				else { 
					echo "Not CI CD tool"
        			}
    			}
		}
	}
     }
}
